@model int?[]

<form asp-controller="MakeDeck" asp-action="GetSelectidCards" method="post" id="cardsPasser">

    <!-- Maakt voor alle kaarten een hiddeen feeld om door te kunnen given -->
    @{
        for (int i = 0; i < Model.Count(); i++)
        {
            <input asp-for="@Model[i]" hidden="hidden" id="selectidCard" value="-1" />
        }
    }

    <input id="rdyBtn" type="submit" value="PostDeck!"
           style="
            position:absolute;
            bottom:0px;
            width:100px; " />

</form>

<form asp-controller="MakeDeck" asp-action="GetSelectidCards" method="post" id="cardsPasser">

    <!-- geeft niets door dus je doet een reset -->

